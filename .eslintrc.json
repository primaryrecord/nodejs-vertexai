{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "ignorePatterns": [
    "node_modules/*",
    "dist/*"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prefer-arrow-functions"
  ],
  "rules": {
    "no-var": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-const": "warn"
  }
}
