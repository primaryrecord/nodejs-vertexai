{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node",
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./dist",
  },
}
